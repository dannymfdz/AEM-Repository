<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="byline-copy"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <escuela
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Escuela Donde Estudiaste"
                        name="./escuela"
                        required="{Boolean}true"/>
                    <hobbies
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        fieldDescription="Agrega tus hobbies"
                        fieldLabel="Hobbies">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            name="./hobbies"/>
                    </hobbies>
                    <videojuegos
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldDescription="Agrega Videojuegos"
                        fieldLabel="Videojuegos">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./videojuegos">
                            <items jcr:primaryType="nt:unstructured">
                                <nombre
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Videojuego"
                                    name="./nombre"
                                    required="{Boolean}true"/>
                                <fechapublicacion
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                    fieldLabel="Fecha de Puublicación Inicial"
                                    name="./fechapublicacion"
                                    required="{Boolean}true"/>
                                <ediciones
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Agrega Videojuegos"
                                    fieldLabel="Ediciones">
                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./videojuegoedicion">
                                        <items jcr:primaryType="nt:unstructured">
                                            <consola
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Consola"
                                                name="./consola"
                                                required="{Boolean}true"/>
                                            <nombreedicion
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Nombre Edición"
                                                name="./nombreedicion"
                                                required="{Boolean}true"/>
                                        </items>
                                    </field>
                                </ediciones>
                            </items>
                        </field>
                    </videojuegos>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
